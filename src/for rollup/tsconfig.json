{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "module": "es6",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "importHelpers": true,

        "strict": true,
        "noImplicitAny": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    }
}