{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "module": "es6",
        "lib": ["es6", "es5","dom","esNext"],
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "./",
        "importHelpers": true,
        "typeRoots":["node_modules/@types"],

        "strict": true,
        "noImplicitAny": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    }
}